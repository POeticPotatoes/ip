<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="400.0" style="-fx-background-color: #2e2e2e;" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Profile picture for bot -->
        <ImageView fx:id="displayPicture" fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 4, 0.5, 0, 0);" HBox.hgrow="SOMETIMES" />

        <!-- Bot chat message -->
        <Label fx:id="dialog" minHeight="-Infinity" style="-fx-background-color: #1e1e1e; -fx-text-fill: #f0f0f0; -fx-padding: 10 15 10 15; -fx-background-radius: 12; -fx-font-size: 14px;" text="Label" wrapText="true" HBox.hgrow="ALWAYS" />
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <spacing>10</spacing>
</fx:root>
